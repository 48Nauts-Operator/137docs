# DocAI-IMAGE Network Configuration
# Copy this file to .env to enable local network access

# Network Configuration for Local Network Access
# Replace 192.168.1.178 with your actual local IP address
FRONTEND_API_URL=http://192.168.1.178:8808/api

# LLM Configuration
OLLAMA_BASE_URL=http://host.docker.internal:11434
LLM_MODEL=llama3
LLM_API_URL=http://host.docker.internal:11434/api/generate

# File System Configuration
HOSTFS_MOUNT=./data

# ColPali Configuration
COLPALI_MODEL=vidore/colpali-v1.1

# Development Options
# DISABLE_FRONTEND_MOUNT=1  # Uncomment to disable frontend hot reload 